{
  "kind": "singleType",
  "collectionName": "blog_configs",
  "pluginOptions": { "i18n": { "localized": true } },
  "info": {
    "singularName": "blog-config",
    "pluralName": "blog-configs",
    "displayName": "Blog Config",
    "description": "Global blog settings and toggles"
  },
  "attributes": {
    "url": {
      "type": "string",
      "required": true,
      "pluginOptions": { "i18n": { "localized": true } },
      "description": "The url of your blog. e.g. https://javascript.moe/blog"
    },
    "imageUrl": {
      "type": "string",
      "required": true,
      "pluginOptions": { "i18n": { "localized": false } },
      "description": "The url to the public folder of your server. e.g. https://javascript.moe/"
    },
    "author": {
      "type": "string",
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "role": {
      "type": "string",
      "pluginOptions": { "i18n": { "localized": false } }
    },
    "location": {
      "type": "string",
      "pluginOptions": { "i18n": { "localized": false } }
    },
    "title": {
      "type": "string",
      "pluginOptions": { "i18n": { "localized": true } },
      "description": "The title that appears in the top of the blog. You can use the placeholders $author, $role, $location."
    },
    "metaTitle": {
      "type": "string",
      "pluginOptions": { "i18n": { "localized": true } },
      "default": "Blog | $author | $role | $location",
      "description": "The title that appears in search engines, social networks and structured data."
    },
    "description": {
      "type": "text",
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"],
      "pluginOptions": { "i18n": { "localized": false } }
    },
    "coverVideo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["videos"],
      "pluginOptions": { "i18n": { "localized": false } }
    }
  }
}
