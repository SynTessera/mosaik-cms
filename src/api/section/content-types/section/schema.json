{
  "kind": "collectionType",
  "collectionName": "sections",
  "pluginOptions": { "i18n": { "localized": true } },
  "info": {
    "singularName": "section",
    "pluralName": "sections",
    "displayName": "Section"
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "content": {
      "type": "richtext",
      "required": true,
      "pluginOptions": { "i18n": { "localized": true } }
    },
    "icon": {
      "type": "string",
      "required": true,
      "pluginOptions": { "i18n": { "localized": false } }
    },
    "order": {
      "type": "number",
      "required": false,
      "default": 0,
      "pluginOptions": { "i18n": { "localized": true } }
    }
  }
}
